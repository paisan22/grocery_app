{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                <h1>Grocery App</h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            {% for item in items %}

                <div class="row">
                    <div class="col-md-4">{{ item.name }}</div>
                    <div class="col-md-4">{{ item.amount }}</div>
                </div>

            {% endfor %}

        </div>
    </div>

{% endblock %}
